<Window x:Class="WpfLaba3Grafs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLaba3Grafs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">

            <StackPanel Height="434" Width="200" >
                <DockPanel>
                    <Button  Height="50" Width="50" Margin="10">
                        <Image Source="/Pointer.png" Height="32" Width="32"></Image>
                    </Button>
                    <TextBlock Margin="10">выделить элемент</TextBlock>
                </DockPanel>
                <DockPanel >
                    <Button  Height="50" Width="50" Margin="10" Click="BtnClick_CreateVertex">
                        <Image Source="/Vertex.png" Height="32" Width="32"></Image>
                    </Button>
                    <TextBlock Margin="10">создать вершину</TextBlock>
                </DockPanel>
                <DockPanel>
                    <Button Click="BtnClick_CreateEdge" Height="50" Width="50" Margin="10">
                        <Image Source="/Edge.png" Height="32" Width="32"></Image>
                    </Button>
                    <TextBlock Margin="10">создать ребро</TextBlock>
                </DockPanel>
                <DockPanel>
                    <Button  Height="50" Width="50" Margin="10">
                        <Image Source="/Crest.png" Height="32" Width="32"></Image>
                    </Button>
                    <TextBlock Margin="10">удалить элемент</TextBlock>
                </DockPanel>
                <StackPanel>
                    <DockPanel Height="60">
                        <Button Width="50" Margin="10,10,5,10"> Заливка </Button>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <Button Width="30" Margin="5"> ^ </Button>
                                <Button Width="30" Margin="5">меньше</Button>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Margin="5">Изменение веса</TextBlock>
                                <TextBox Margin="5"></TextBox>
                                
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Height="30">
                        <ToggleButton Width="29" Margin="2" Background="Red"/>
                        <ToggleButton Width="29" Margin="2" Background="Orange"/>
                        <ToggleButton Width="29" Margin="2" Background="Yellow"/>
                        <ToggleButton Width="29" Margin="2" Background="Green"/>
                        <ToggleButton Width="29" Margin="2" Background="CadetBlue"/>
                        <ToggleButton Width="29" Margin="2" Background="Blue"/>
                    </DockPanel>
                </StackPanel>
            </StackPanel>
            <DockPanel Height="434" Width="400">
                <Canvas Height="434" Width="400" x:Name ="DrawingCanvas" MouseLeftButtonDown="MouseLeftBtnDown_DrawingGraph" MouseLeftButtonUp="MouseLeftButtonUp_DrawingGraph" Background="Aquamarine"></Canvas>
            </DockPanel>
            <StackPanel Height="434" Width="200">
                <DockPanel>
                    <TextBox Width="93" Height="73">матрица</TextBox>
                    <TextBox>матрица</TextBox>
                </DockPanel>
                <DockPanel>
                    <StackPanel Height="300">
                        <TextBlock>поиск</TextBlock>

                        <TextBlock>поиск</TextBlock>
                        <TextBlock>поиск</TextBlock>
                    </StackPanel>
                </DockPanel>
                <TextBlock>сохранить</TextBlock>
                <TextBlock>сохранить</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
